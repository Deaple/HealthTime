<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:weightSum="1">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etNomeMedicamento"
        android:hint="Nome do medicamento"
        android:gravity="center_horizontal"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="31dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etNomeFarmacia"
        android:gravity="center_horizontal"
        android:hint="Nome da Farmácia"
        android:layout_below="@+id/etNomeMedicamento"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etTelFarmacia"
        android:hint="Telefone da Farmácia"
        android:gravity="center_horizontal"
        android:layout_below="@+id/etNomeFarmacia"
        android:layout_centerHorizontal="true"
        android:inputType="phone" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gravar Medicamento"
        android:id="@+id/btnGravarMed"
        android:layout_below="@+id/etRestricoes"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etRestricoes"
        android:hint="Restrições"
        android:gravity="center_horizontal"
        android:layout_below="@+id/etTelFarmacia"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/info_medicamento"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:inputType="phone" />
</RelativeLayout>